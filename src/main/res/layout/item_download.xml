<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:id="@+id/item_rootView"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_locality_status"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/waiting"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:textColor="@color/colorBlack1"
        android:layout_toRightOf="@+id/iv_locality_status"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/tv_locality_name"
        tools:text="歌名"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorBlack1"
        android:layout_toRightOf="@+id/tv_locality_name"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/tv_locality_progress"
        tools:text="(20%)"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_locality_description"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_locality_status"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/darker_gray"
        tools:text="5.2M 海阔天空"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/tv_locality_description"
        android:layout_toLeftOf="@+id/iv_del_download"
        android:id="@+id/pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_del_download"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>